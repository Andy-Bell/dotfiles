function! TwoSpace()
    setlocal ts=2
    setlocal sw=2
endfunction

function! OpenSpec()
    let repl = substitute(substitute(expand('%'), '\.rb', '', ''), "lib/", "spec/", "")
    let path = repl . '_spec.rb'
    exec('tabe ' . path)
endfunction

function! VsplitSpec()
    let repl = substitute(substitute(expand('%'), '\.rb', '', ''), "lib/", "spec/", "")
    let path = repl . '_spec.rb'
    exec('vsplit ' . path)
endfunction

function! PromoteToLet()
    :normal! dd
    " :exec '?^\s*it\>'
    :normal! P
    :.s/\(\w\+\) = \(.*\)$/let(:\1) { \2 }/
    :normal ==
    :normal! dd
endfunction

:command! PromoteToLet :call PromoteToLet()

